rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() { return request.auth != null; }

    // users/{uid} - user hanya boleh baca data dirinya
    // TIDAK BOLEH write (biar gak bisa ngubah role jadi tutor / nambah saldo)
    match /users/{uid} {
      allow read: if signedIn() && request.auth.uid == uid;
      allow write: if false;
    }

    // sessions - tutor owner atau student yang ada di studentIds boleh baca
    // TIDAK BOLEH write dari client (start/end hanya via Cloud Functions)
    match /sessions/{sessionId} {
      allow read: if signedIn()
        && (resource.data.tutorId == request.auth.uid
            || request.auth.uid in resource.data.studentIds);
      allow write: if false;
    }

    // transactions - hanya tutor pemilik transaksi boleh baca
    match /transactions/{txId} {
      allow read: if signedIn() && resource.data.tutorId == request.auth.uid;
      allow write: if false;
    }

    // default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

